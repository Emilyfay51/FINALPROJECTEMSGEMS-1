@page "{id:int}"
@model FinalProjectEmsGems_1.Pages_Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center" style="color: gold;">Details</h1>

<div>

    <h4 style="color: gold;">Product</h4>
    <hr />
    <h1 style ="color: gold;">@Model.Product.Name</h1>
    <dl class="row">
        <dt class="col-sm-2" style="color: gold;">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10" style="color: gold;">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2" style="color: gold;">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10" style="color: gold;">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2" style="color: gold;">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class="col-sm-10" style="color: gold;">
            @Html.DisplayFor(model => model.Product.Category)
        </dd>
        <dt class="col-sm-2" style="color: gold;">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10" style="color: gold;">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2" style="color: gold;">
            @Html.DisplayNameFor(model => model.Product.ImagePath)
        </dt>
        <dd class="col-sm-10" style="color: gold;">
            @Html.DisplayFor(model => model.Product.ImagePath)
        </dd>
        <dt class="col-sm-2" style="color: gold;">
            @Html.DisplayNameFor(model => model.Product.StockQuantity)
        </dt>
        <dd class="col-sm-10" style="color: gold;">
            @Html.DisplayFor(model => model.Product.StockQuantity)
        </dd>
    </dl>
    <!-- Reviews Section -->
    <hr />
    <h4 style="color: gold;">Reviews</h4>
    @if (Model.Reviews != null && Model.Reviews.Count > 0)
    {
        <ul class="list-group">
        @foreach (var review in Model.Reviews)
        {
            <li class="list-group-item">
                <strong>Score:</strong> <span style="color: red;">@review.Score</span><br />
                <strong>Review:</strong> <span style="color: red;">@review.ReviewText</span>
            </li>
        }
        </ul>
    }
    else
    {
        <p>No reviews yet.</p>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product.ProductID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
